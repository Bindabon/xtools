{% extends 'base.html.twig' %}
{% import 'macros/forms.html.twig' as forms %}

{% block body %}
    <form class="col-lg-8 col-lg-offset-2" action="{{ path("TransclusionCounter") }}" method="get" accept-charset="utf-8" >
        <fieldset class="form-fieldset">
            {{ forms.wiki_input(project) }}
            {{ forms.page_input(true, project, page) }}
            <div class="input-group form-row">
                <label class="input-group-addon form-label" for="namespace_select">
                    {{ msg('transclusion-namespace') }}
                    <div class="glyphicon glyphicon-info-sign tooltipcss pull-right" role="dialog" aria-labelledby="transclusion-namespace-desc">
                        <div class="tooltip-body" id="transclusion-namespace-desc">
                            {{ msg('transclusion-namespace-desc') }}
                        </div>
                    </div>
                </label>
                <select class="form-control namespace-selector" name="trans_namespace" id="namespace_select" data-no-search="1">
                    <option value="all" {% if trans_namespace == 'all' %}selected="selected"{% endif %}>
                        {{ msg('all') | ucfirst }}
                    </option>
                    {% for id, name in project.namespaces %}
                        <option value="{{ id }}" {% if trans_namespace != 'all' and trans_namespace == id %}selected="selected"{% endif %}>
                            {% if id == 0 %}
                                {{ msg('mainspace') }}
                            {% else %}
                                {{ name }}
                            {% endif %}
                        </option>
                    {% endfor %}
                </select>
            </div>
        </fieldset>
        {{ forms.submit_btn() }}
    </form>
{% endblock %}
